<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <% content.each do |post| %>
  <url>
    <loc><%= post[:url] %></loc>
    <lastmod><%= post[:date] %></lastmod>
    <changefreq><%= post[:changefreq] %></changefreq>
    <priority><%= post[:priority] %></priority>
  </url>
  <% end %>
</urlset> 
